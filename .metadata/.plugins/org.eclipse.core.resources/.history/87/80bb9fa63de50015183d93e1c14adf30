var application_root = __dirname;
var express = require("express"); // Initialisation of Express.js module for
// Node.js REST Calling
var path = require("path");

var app = express(); // Express variable

var http = require('http');
var d = '';
// GET Request options configuration
var optionsget = {
	host : 'localhost',
	port : 3000,
	path : '/users', // url with parameters
	method : 'GET' // GET Method
};
// Preparing Express REST API
app.get('/users', function(req, res) {
	res.writeHead(200, {
		'Content-Type' : 'text'
	});
	// HTTP GET request
	var reqGet = http.request(optionsget, function(response) {
		response.on('data', function(data) {
			res.render('users');

		
			res.end(data); // Writing the Remote REST Call response to the
			// Express REST API "getRemoteData"
		});
	});
	reqGet.end();
	reqGet.on('error', function(e) {
		console.error(e);
	});
});

/*
